<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sirrineprogramming.mealplanner.SpecificList"
    android:id="@+id/specific_list_scroll_view">

    <LinearLayout
        android:id="@+id/specific_list_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/specificListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="36sp"
            android:text="@string/defaultListName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    </LinearLayout>




</ScrollView>
