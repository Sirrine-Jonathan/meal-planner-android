<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sirrineprogramming.mealplanner">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShoppingList"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sirrineprogramming.mealplanner.MainActivity" />
        </activity>
        <activity
            android:name=".Pantry"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sirrineprogramming.mealplanner.MainActivity" />
        </activity>
        <activity
            android:name=".SignIn"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sirrineprogramming.mealplanner.MainActivity" />
        </activity>
        <activity android:name=".SpecificList" />
        <activity
            android:name=".ItemViewActivity"
            android:label="@string/title_activity_item_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>